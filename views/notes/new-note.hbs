<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nueva lancha</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input type="text" name="encargado" class="form-control" placeholder="Encargado" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="descripcion" class="form-control" placeholder="Descripcion"></textarea>
        </div>
        <div class="form-group">
          <textarea name="ciudad" class="form-control" placeholder="Ciudad"></textarea>
        </div>
        <div class="form-group">
          <textarea name="NumeroTelefono" class="form-control" placeholder="Numero Telefono"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
